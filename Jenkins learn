pipeline {
    agent any
// Parameters Block 
    stages {
        stage('Parllel execution') {
            parallel {
                stage('Build') {
                    steps {
                        echo 'Building the application...'
                        sh 'echo "HEllo HAri"'
                    }
                }
                stage('Test') {
                    steps {
                        echo 'Testing the application...'
                    }
                }
                stage('Deploy') {
                    steps {
                        echo 'Deploying the application...'
                    }
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
             
            }
            post {
                success{
                    echo "Build Successful"
                }
                failure{
                    echo "Build Failed"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
               
            }
            post{
                success{
                    echo "Tests Passed"
                }
                failure{
                    echo "Tests Failed"
                }
            }
        } 
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                
            } // EDO Steps
            post{
                success{
                    echo "Deployed Successfully"
                }
                failure{
                    echo "Deployment Failed"
                }
            }
        } //EOD Stage Deploy
    } //EOD Stages 
// POST BLOCK 
    post {
        always{
            echo "This will run always"
        }
        success{
            echo "This is Success "
        }
        failure {
            echo "This is Failure"

        }
    }

    } // EOD pipeline
