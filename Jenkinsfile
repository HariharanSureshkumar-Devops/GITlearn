pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        } // EOD 
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            } // EDO Steps
        } //EOD Stage Deploy
    } //EOD Stages 
// POST BLOCK 
    
} // EOD pipeline
